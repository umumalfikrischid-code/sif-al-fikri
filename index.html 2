    <script>
        // SYSTEM CONFIG
        const SYSTEM_CONFIG = {
            facilities: [
                {id:"aula-smp",name:"üèõÔ∏è Aula SMP"},{id:"aula-sma",name:"üèõÔ∏è Aula SMA"},
                {id:"saung-besar",name:"üå¥ Saung Besar"},{id:"saung-kecil",name:"üå¥ Saung Kecil"},
                {id:"ruang-serbaguna",name:"üß∞ Ruang Serbaguna"},
                {id:"lapangan-basket",name:"üèÄ Lapangan Basket"},{id:"lapangan-futsal",name:"‚öΩ Lapangan Futsal"},
                {id:"lapangan-voli",name:"üèê Lapangan Voli"},{id:"masjid",name:"üïå Masjid"},
                {id:"taman-masjid",name:"üå≥ Taman Depan Masjid"},
                {id:"perpustakaan-sd",name:"üìö Perpustakaan SD"},{id:"perpustakaan-smp",name:"üìö Perpustakaan SMP"},
                {id:"perpustakaan-sma",name:"üìö Perpustakaan SMA"},
                {id:"labkom-sd",name:"üíª Lab Komputer SD"},{id:"labkom-smp",name:"üíª Lab Komputer SMP"},
                {id:"labkom-sma",name:"üíª Lab Komputer SMA"},
                {id:"kantin-smp",name:"üç± Kantin SMP"},{id:"kantin-sma",name:"üç± Kantin SMA"}
            ]
        };

        function renderFacilities() {
            const select = document.getElementById('sarana');
            SYSTEM_CONFIG.facilities.forEach(f => {
                const opt = document.createElement('option');
                opt.value = f.id;
                opt.textContent = f.name;
                select.appendChild(opt);
            });
        }

        let isDrawing = false;
        const canvas = document.getElementById('signature-pad');
        const ctx = canvas.getContext('2d');
        ctx.lineWidth = 2;
        ctx.lineCap = 'round';

        function resizeCanvas() {
            canvas.width = canvas.clientWidth;
            canvas.height = 150;
        }
        window.addEventListener('load', resizeCanvas);
        window.addEventListener('resize', resizeCanvas);

        canvas.addEventListener('mousedown', startDraw);
        canvas.addEventListener('mousemove', draw);
        canvas.addEventListener('mouseup', stopDraw);
        canvas.addEventListener('touchstart', handleTouchStart, { passive: false });
        canvas.addEventListener('touchmove', handleTouchMove, { passive: false });
        canvas.addEventListener('touchend', stopDraw);

        function handleTouchStart(e) {
            e.preventDefault();
            const touch = e.touches[0];
            const mouseEvent = new MouseEvent('mousedown', {
                clientX: touch.clientX,
                clientY: touch.clientY
            });
            canvas.dispatchEvent(mouseEvent);
        }
        function handleTouchMove(e) {
            e.preventDefault();
            const touch = e.touches[0];
            const mouseEvent = new MouseEvent('mousemove', {
                clientX: touch.clientX,
                clientY: touch.clientY
            });
            canvas.dispatchEvent(mouseEvent);
        }
        function startDraw(e) {
            const rect = canvas.getBoundingClientRect();
            ctx.beginPath();
            ctx.moveTo(e.clientX - rect.left, e.clientY - rect.top);
            isDrawing = true;
        }
        function draw(e) {
            if (!isDrawing) return;
            const rect = canvas.getBoundingClientRect();
            ctx.lineTo(e.clientX - rect.left, e.clientY - rect.top);
            ctx.stroke();
        }
        function stopDraw() { isDrawing = false; }

        function validateForm() {
            const fields = ['nama_pemohon', 'wa_pemohon', 'kegiatan', 'tanggal', 'waktu_mulai', 'waktu_selesai', 'sarana'];
            let valid = fields.every(id => document.getElementById(id).value.trim() !== '');
            const imgData = ctx.getImageData(0, 0, canvas.width, canvas.height).data;
            const isSigned = imgData.some(px => px !== 255);
            valid = valid && isSigned;
            document.getElementById('submitBtn').disabled = !valid;
        }

        function checkConflict() {
            const tgl = document.getElementById('tanggal').value;
            const mulai = document.getElementById('waktu_mulai').value;
            const selesai = document.getElementById('waktu_selesai').value;
            const sarana = document.getElementById('sarana').value;
            const alertDiv = document.getElementById('conflictAlert');

            if (!tgl || !mulai || !selesai || !sarana) {
                alertDiv.style.display = 'none';
                return;
            }

            const bookings = JSON.parse(localStorage.getItem('bookings')) || [];
            const t1 = new Date(`${tgl}T${mulai}`);
            const t2 = new Date(`${tgl}T${selesai}`);

            const conflict = bookings.some(b => {
                if (b.sarana !== sarana || b.tanggal !== tgl) return false;
                const b1 = new Date(`${b.tanggal}T${b.waktuMulai}`);
                const b2 = new Date(`${b.tanggal}T${b.waktuSelesai}`);
                return t1 < b2 && t2 > b1;
            });

            if (conflict) {
                const saranaName = SYSTEM_CONFIG.facilities.find(f => f.id === sarana)?.name || sarana;
                alertDiv.innerHTML = `
                    ‚ö†Ô∏è Sarana ini sudah dipakai pada waktu tersebut.<br>
                    <button type="button" onclick="openWaToErwin()" style="margin-top:10px; padding:6px 12px; background:#27ae60; color:white; border:none; border-radius:4px; cursor:pointer;">
                        üí¨ Konfirmasi ke Om Erwin
                    </button>
                `;
                alertDiv.style.display = 'block';
            } else {
                alertDiv.style.display = 'none';
            }
        }

        function openWaToErwin() {
            const phone ='628886183954';
            const pemohon = document.getElementById('nama_pemohon').value || 'Pemohon';
            const kegiatan = document.getElementById('kegiatan').value || 'Kegiatan';
            const tgl = document.getElementById('tanggal').value;
            const mulai = document.getElementById('waktu_mulai').value;
            const selesai = document.getElementById('waktu_selesai').value;
            const sarana = SYSTEM_CONFIG.facilities.find(f => f.id === document.getElementById('sarana').value)?.name || 'Sarana';

            const dateOptions = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
            const formattedDate = tgl ? new Date(tgl).toLocaleDateString('id-ID', dateOptions) : 'Tanggal tidak diketahui';

            let message = `Assalamu'alaikum Om Erwin,\n\n`;
            message += `Mohon izin konfirmasi jadwal booking:\n`;
            message += `‚Ä¢ Pemohon: ${pemohon}\n`;
            message += `‚Ä¢ Kegiatan: ${kegiatan}\n`;
            message += `‚Ä¢ Tanggal: ${formattedDate}\n`;
            message += `‚Ä¢ Waktu: ${mulai} - ${selesai}\n`;
            message += `‚Ä¢ Sarana: ${sarana}\n\n`;
            message += `Mohon bantuan penyesuaian jadwal, Om.\n`;
            message += `(Kalau perlu, saya siap bawain kopi... atau minimal emoji kopi ‚òï)\n\n`;
            message += `Terima kasih banyak, Om! üôè`;

            // ‚úÖ FIX: NO SPACE AFTER wa.me/
            window.open(`https://wa.me/${phone}?text=${encodeURIComponent(message)}`, '_blank');
        }

        function cleanupOldData() {
            const now = new Date();
            const thirtyDaysAgo = new Date(now.setDate(now.getDate() - 30));
            let bookings = JSON.parse(localStorage.getItem('bookings')) || [];
            bookings = bookings.filter(b => new Date(b.createdAt) > thirtyDaysAgo);
            localStorage.setItem('bookings', JSON.stringify(bookings));
        }

        document.getElementById('bookingForm').addEventListener('submit', function(e) {
            e.preventDefault();
            if (document.getElementById('submitBtn').disabled) return;

            const booking = {
                id: 'B' + Date.now(),
                pemohon: document.getElementById('nama_pemohon').value,
                wa: document.getElementById('wa_pemohon').value,
                email: document.getElementById('email_pemohon').value,
                kegiatan: document.getElementById('kegiatan').value,
                tanggal: document.getElementById('tanggal').value,
                waktuMulai: document.getElementById('waktu_mulai').value,
                waktuSelesai: document.getElementById('waktu_selesai').value,
                sarana: document.getElementById('sarana').value,
                inventaris: document.getElementById('inventaris').value,
                status: 'pending',
                createdAt: new Date().toISOString(),
                signature: canvas.toDataURL()
            };

            let bookings = JSON.parse(localStorage.getItem('bookings')) || [];
            bookings.push(booking);
            localStorage.setItem('bookings', JSON.stringify(bookings));

            alert('‚úÖ Booking diajukan! Menunggu approval dari Kepala Sekolah.');
            window.location.reload();
        });

        document.querySelectorAll('input, select, textarea').forEach(el => {
            el.addEventListener('input', () => {
                validateForm();
                if (el.id !== 'inventaris') checkConflict();
            });
        });
        canvas.addEventListener('mouseup', validateForm);
        canvas.addEventListener('touchend', validateForm);

        document.addEventListener('DOMContentLoaded', () => {
            renderFacilities();
            cleanupOldData();
            document.getElementById('tanggal').min = new Date().toISOString().split('T')[0];
            validateForm();
        });

        // Function to show/hide booking form
        function showBookingForm() {
            document.getElementById('bookingFormContainer').classList.add('active');
            window.scrollTo({ top: document.getElementById('bookingFormContainer').offsetTop - 20, behavior: 'smooth' });
        }
    </script>
</body>
</html>
