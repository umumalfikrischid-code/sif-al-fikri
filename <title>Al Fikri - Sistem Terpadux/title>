    <script>
        // TAB SYSTEM
        function showTab(tabName) {
            // Hide all tabs
            document.querySelectorAll('.card').forEach(card => {
                card.classList.remove('active');
            });
            
            // Remove active from all nav tabs
            document.querySelectorAll('.nav-tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // Show selected tab
            document.getElementById(tabName).classList.add('active');
            
            // Add active to clicked nav tab
            event.target.classList.add('active');
            
            // Save current tab to localStorage
            localStorage.setItem('currentTab', tabName);
        }

        // FORM HANDLING - BOOKING
        document.getElementById('bookingForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = {
                nama: document.getElementById('namaPemesan').value,
                unit: document.getElementById('unitPemesan').value,
                sarana: document.getElementById('sarana').value,
                tanggal: document.getElementById('tanggalKegiatan').value,
                waktuMulai: document.getElementById('waktuMulai').value,
                waktuSelesai: document.getElementById('waktuSelesai').value,
                keperluan: document.getElementById('keperluan').value,
                whatsapp: document.getElementById('whatsapp').value
            };

            // Save to localStorage
            saveData('booking', formData);
            
            // Show success message
            alert('‚úÖ Booking berhasil diajukan! Kami akan menghubungi via WhatsApp untuk konfirmasi.');
            this.reset();
        });

        // FORM HANDLING - LAPORAN
        document.getElementById('laporanForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = {
                jenis: document.getElementById('jenisLaporan').value,
                lokasi: document.getElementById('lokasiLaporan').value,
                deskripsi: document.getElementById('deskripsiLaporan').value,
                pelapor: document.getElementById('namaPelapor').value,
                telepon: document.getElementById('teleponPelapor').value
            };

            saveData('laporan', formData);
            alert('üö® Laporan berhasil dikirim! Tim kami akan segera menindaklanjuti.');
            this.reset();
        });

        // FORM HANDLING - PEMESANAN
        document.getElementById('pemesananForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = {
                unit: document.getElementById('unitPemesanan').value,
                barang: document.getElementById('namaBarang').value,
                jumlah: document.getElementById('jumlahBarang').value,
                spesifikasi: document.getElementById('spesifikasiBarang').value,
                keperluan: document.getElementById('keperluanPemesanan').value,
                prioritas: document.getElementById('prioritasPemesanan').value,
                pemohon: document.getElementById('namaPemohon').value
            };

            saveData('pemesanan', formData);
            alert('‚úÖ Pemesanan berhasil diajukan! Akan diproses oleh Bagian Umum.');
            this.reset();
        });

        // DATA MANAGEMENT
        function saveData(type, data) {
            const timestamp = new Date().toISOString();
            const key = `${type}_${timestamp}`;
            localStorage.setItem(key, JSON.stringify(data));
            
            // Also save to recent submissions
            const recent = JSON.parse(localStorage.getItem('recentSubmissions') || '[]');
            recent.unshift({ type, data, timestamp });
            localStorage.setItem('recentSubmissions', JSON.stringify(recent.slice(0, 10))); // Keep last 10
        }

        // RESTORE LAST TAB ON LOAD
        document.addEventListener('DOMContentLoaded', function() {
            const lastTab = localStorage.getItem('currentTab') || 'home';
            showTab(lastTab);
            
            // Add some sample data to forms for testing
            if (!localStorage.getItem('sampleDataAdded')) {
                // Add sample options or placeholders if needed
                localStorage.setItem('sampleDataAdded', 'true');
            }
        });

        // AUTO-SAVE DRAFT FUNCTIONALITY
        function setupAutoSave(formId, storageKey) {
            const form = document.getElementById(formId);
            const inputs = form.querySelectorAll('input, select, textarea');
            
            // Load saved draft
            const draft = localStorage.getItem(storageKey);
            if (draft) {
                const data = JSON.parse(draft);
                inputs.forEach(input => {
                    if (data[input.id]) {
                        input.value = data[input.id];
                    }
                });
            }
            
            // Save on input change
            inputs.forEach(input => {
                input.addEventListener('input', function() {
                    const formData = {};
                    inputs.forEach(i => {
                        if (i.value) formData[i.id] = i.value;
                    });
                    localStorage.setItem(storageKey, JSON.stringify(formData));
                });
            });
        }

        // Initialize auto-save for all forms
        setupAutoSave('bookingForm', 'draft_booking');
        setupAutoSave('laporanForm', 'draft_laporan');
        setupAutoSave('pemesananForm', 'draft_pemesanan');
    </script>
</body>
