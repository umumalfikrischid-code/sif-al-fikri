    <script>
        // ENHANCED SYSTEM MANAGEMENT
        const currentUser = JSON.parse(localStorage.getItem('currentUser'));
        
        // Update UI based on user session
        function updateUserInterface() {
            const userGreeting = document.getElementById('userGreeting');
            
            if (currentUser) {
                userGreeting.innerHTML = `
                    <strong>ğŸ‘¤ User:</strong> ${currentUser.username} | 
                    <strong>ğŸ­ Peran:</strong> ${getRoleName(currentUser.role)} | 
                    <strong>ğŸ•’ Login:</strong> ${new Date(currentUser.loggedInAt).toLocaleString('id-ID')}
                    <br><small style="color: #27ae60;">âœ… Session aktif - Sistem siap digunakan</small>
                `;
                
                // Show admin features if applicable
                if (currentUser.role === 'admin' || currentUser.role === 'kabid') {
                    document.querySelector('.quick-access-grid').innerHTML += `
                        <a href="analytics.html" class="btn btn-secondary">ğŸ“ˆ Analytics</a>
                    `;
                }
            } else {
                userGreeting.innerHTML = 'ğŸ”’ Silakan login untuk mengakses sistem lengkap | <small>Gunakan menu Login System di bawah</small>';
            }
        }

        // LIVE STATISTICS
        function updateLiveStats() {
            const bookings = JSON.parse(localStorage.getItem('bookings')) || [];
            const reports = JSON.parse(localStorage.getItem('reports')) || [];
            const users = JSON.parse(localStorage.getItem('users')) || [];
            
            const activeBookings = bookings.filter(b => b.status === 'approved').length;
            const pendingApprovals = bookings.filter(b => b.status === 'pending').length;
            const totalUsers = users.length;
            
            document.getElementById('activeBookings').textContent = activeBookings;
            document.getElementById('pendingApprovals').textContent = pendingApprovals;
            document.getElementById('totalUsers').textContent = totalUsers || '5+';
        }

        // SYSTEM STATUS MONITORING
        function checkSystemStatus() {
            const systemStatus = document.getElementById('systemStatus');
            const now = new Date();
            const hours = now.getHours();
            
            if (hours >= 8 && hours <= 17) {
                systemStatus.innerHTML = 'ğŸŸ¢ Sistem Online - Version 3.0 Barakah Edition';
                systemStatus.style.color = '#27ae60';
            } else {
                systemStatus.innerHTML = 'ğŸŒ™ Sistem Online (Off-peak) - Version 3.0 Barakah Edition';
                systemStatus.style.color = '#f39c12';
            }
        }

        // ENHANCED ROLE MANAGEMENT
        function getRoleName(role) {
            const roleNames = {
                'pemohon': 'Pemohon', 
                'kepsek-sd': 'Kepala Sekolah SD', 
                'kepsek-smp': 'Kepala Sekolah SMP', 
                'kepsek-sma': 'Kepala Sekolah SMA',
                'koordinator': 'Koordinator Umum (Erwinsyah)', 
                'kabid': 'Kabid Umum (Hanung Budianto, S.E.)',
                'admin': 'Administrator System'
            };
            return roleNames[role] || role;
        }

        // SESSION MANAGEMENT
        function clearSession() {
            localStorage.removeItem('currentUser');
            localStorage.removeItem('bookingData');
            localStorage.removeItem('reportData');
            alert('âœ… Logout berhasil! Session telah dibersihkan.');
            window.location.reload();
        }

        // AUTO SESSION CHECK
        function checkSessionAge() {
            if (currentUser && currentUser.loggedInAt) {
                const loginTime = new Date(currentUser.loggedInAt);
                const now = new Date();
                const hoursDiff = (now - loginTime) / (1000 * 60 * 60);
                
                if (hoursDiff > 24) {
                    clearSession();
                    alert('ğŸ•’ Session expired. Silakan login kembali.');
                }
            }
        }

        // INITIALIZE SYSTEM
        document.addEventListener('DOMContentLoaded', function() {
            updateUserInterface();
            updateLiveStats();
            checkSystemStatus();
            checkSessionAge();
            
            // Auto-refresh stats every 30 seconds
            setInterval(updateLiveStats, 30000);
            
            console.log('ğŸ•Œ SIF Al Fikri System - Status: LIVE');
            console.log('ğŸŒŸ Special Thanks: Ø§Ù„Ù„Ù‡ â€¢ Nabi Muhammad SAW â€¢ The Dream Team');
            console.log('ğŸš€ Version: 3.0 - Barakah Edition (Enhanced)');
            console.log('ğŸ“§ Support: bagianumum@alfikri.sch.id');
        });
    </script>
